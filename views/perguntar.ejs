<%-include('partials/header.ejs') %>
    <body>
        <%-include('partials/navbar.ejs') %>
        <section class="container" id="formulario-pergunta">
            <div class="card">
                <div class="card-header">
                   <h3>Realizar pergunta</h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="/salvarPergunta">
                        <label for="title">Título</label>
                        <input class="form-control" type="text" id="title" name="title" placeholder="Título da pergunta" required>
                        <br>
                        <label for="desc">Descrição</label>
                        <textarea class="form-control" id="desc" name="desc" placeholder="Descreva sua pergunta" required></textarea>
                        <br>
                        <button class="btn btn-primary" type="reset">Limpar</button>
                        <button class="btn btn-primary" type="submit">Perguntar</button>
                    </form>
                </div>
            </div>
        </section>
    </body>
<%-include('partials/footer.ejs') %>    