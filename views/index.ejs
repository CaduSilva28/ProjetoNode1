<%-include('partials/header.ejs') %>
<body>
    <%-include('partials/navbar.ejs') %>
    <section class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a class="btn btn-primary" href="/perguntar">Fazer pergunta</a>
        <hr>
        <% perguntas.forEach(perguntas => {  %>
        <br>
        <div class="card">
            <div class="card-body">
                <h3><%=perguntas.title; %></h3>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" href="/pergunta/<%= perguntas.id %>">Responder</a>
            </div>
        </div>
        <% }); %> 
    </section>
</body>
<%-include('partials/footer.ejs') %>